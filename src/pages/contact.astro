---
import Layout from "../layouts/Layout.astro";
---

<Layout 
  title="Contact - Mathis Guellati | Discutons de votre projet"
  description="Contactez Mathis Guellati pour discuter de vos projets de design et développement web. Envoyez-moi un message et donnons vie à vos idées créatives."
>
  <div class="mt-30 text-secondary py-8 md:py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-fruktur flex justify-center mb-8 md:mb-12">Contact</h1>
      <div
        id="successMessage"
        class="max-w-5xl mx-auto mb-4 md:mb-8 bg-green-500/20 border-2 border-green-500 text-green-200 px-4 md:px-6 py-3 md:py-4 rounded-2xl md:rounded-3xl text-sm md:text-base hidden"
      >
      </div>
      <div
        id="errorMessage"
        class="max-w-5xl mx-auto mb-4 md:mb-8 bg-red-500/20 border-2 border-red-500 text-red-200 px-4 md:px-6 py-3 md:py-4 rounded-2xl md:rounded-3xl text-sm md:text-base hidden"
      >
      </div>
      <div
        class="max-w-5xl mx-auto border-2 md:border-4 border-secondary rounded-xl md:rounded-[2rem] overflow-hidden"
      >
        <div class="flex flex-col md:flex-row">
          <div
            class="p-6 md:p-8 lg:p-12 w-full md:w-2/3 flex flex-col justify-center border-b-2 md:border-b-4 lg:border-b-0 md:border-r-4 border-secondary"
          >
            <h2
              class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 md:mb-6 font-fruktur flex justify-center"
            >
              UNE ENVIE ?
            </h2>
            <p class="text-secondary text-sm md:text-base lg:text-lg font-grotesk leading-relaxed">
              Si ces projets vous intéressent, je serai ravi d'échanger avec
              vous sur vos besoins en design et développement.
            </p>
          </div>

          <div class="w-full p-6 md:p-8 lg:p-12">
            <h3
              class="text-xl md:text-2xl lg:text-3xl font-fruktur font-bold mb-6 md:mb-8 text-center"
            >
              Contact direct
            </h3>

            <form id="contactForm" class="space-y-4 md:space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-3 md:gap-4">
                <div>
                  <label
                    for="nom"
                    class="block text-xs md:text-sm mb-1 md:mb-2 text-secondary/60 font-grotesk"
                  >
                    Nom
                  </label>
                  <input
                    type="text"
                    id="nom"
                    name="nom"
                    required
                    class="w-full px-3 md:px-4 py-2 md:py-3 bg-[#3a3a3a] border-none rounded-lg text-sm md:text-base text-white placeholder-secondary/60 font-grotesk focus:outline-none focus:ring-2 focus:ring-gray-600"
                  />
                </div>

                <div>
                  <label
                    for="email"
                    class="block text-xs md:text-sm mb-1 md:mb-2 text-secondary/60 font-grotesk"
                  >
                    Email
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-3 md:px-4 py-2 md:py-3 bg-[#3a3a3a] border-none rounded-lg text-sm md:text-base text-white placeholder-secondary/60 font-grotesk focus:outline-none focus:ring-2 focus:ring-gray-600"
                  />
                </div>
              </div>

              <div>
                <label
                  for="message"
                  class="block text-xs md:text-sm mb-1 md:mb-2 text-secondary/60 font-grotesk"
                >
                  Votre demande
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="4"
                  class="w-full px-3 md:px-4 py-2 md:py-3 bg-[#3a3a3a] border-none rounded-lg text-sm md:text-base text-white placeholder-secondary/60 font-grotesk focus:outline-none focus:ring-2 focus:ring-gray-600 resize-none md:rows-5"
                ></textarea>
              </div>

              <div class="flex justify-center pt-1 md:pt-2">
                <button
                  type="submit"
                  id="submitBtn"
                  class="px-6 md:px-8 py-2 md:py-2.5 bg-white cursor-pointer text-black font-semibold rounded-full hover:bg-gray-200 transition-colors duration-200 flex items-center gap-2 text-xs md:text-sm disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <span id="btnText" class="font-grotesk text-primary"
                    >Envoyer</span
                  >
                  <svg
                    id="btnArrow"
                    class="w-4 h-4"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M9 5l7 7-7 7"></path>
                  </svg>
                  <svg
                    id="btnSpinner"
                    class="w-4 h-4 animate-spin hidden"
                    fill="none"
                    viewBox="0 0 24 24"
                  >
                    <circle
                      class="opacity-25"
                      cx="12"
                      cy="12"
                      r="10"
                      stroke="currentColor"
                      stroke-width="4"></circle>
                    <path
                      class="opacity-75"
                      fill="currentColor"
                      d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                    ></path>
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById("contactForm") as HTMLFormElement;
  const submitBtn = document.getElementById("submitBtn") as HTMLButtonElement;
  const btnText = document.getElementById("btnText") as HTMLSpanElement;
  const btnArrow = document.getElementById("btnArrow") as HTMLElement;
  const btnSpinner = document.getElementById("btnSpinner") as HTMLElement;
  const successMessage = document.getElementById(
    "successMessage"
  ) as HTMLDivElement;
  const errorMessage = document.getElementById(
    "errorMessage"
  ) as HTMLDivElement;

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = {
      nom: formData.get("nom") as string,
      email: formData.get("email") as string,
      message: formData.get("message") as string,
    };

    successMessage.classList.add("hidden");
    errorMessage.classList.add("hidden");

    submitBtn.disabled = true;
    btnText.textContent = "Envoi...";
    btnArrow.classList.add("hidden");
    btnSpinner.classList.remove("hidden");

    try {
      const response = await fetch("/apis/contact", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();

      if (result.success) {
        successMessage.textContent = result.message;
        successMessage.classList.remove("hidden");
        form.reset();

        successMessage.scrollIntoView({ behavior: "smooth", block: "nearest" });
      } else {
        errorMessage.textContent = result.error;
        errorMessage.classList.remove("hidden");

        errorMessage.scrollIntoView({ behavior: "smooth", block: "nearest" });
      }
    } catch (error) {
      errorMessage.textContent =
        "Une erreur réseau est survenue. Veuillez réessayer.";
      errorMessage.classList.remove("hidden");
      errorMessage.scrollIntoView({ behavior: "smooth", block: "nearest" });
    } finally {
      submitBtn.disabled = false;
      btnText.textContent = "Envoyer";
      btnArrow.classList.remove("hidden");
      btnSpinner.classList.add("hidden");
    }
  });
</script>
