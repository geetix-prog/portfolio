---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="min-h-screen bg-[#1a1a1a] text-white py-16 px-4">
    <div class="max-w-6xl mx-auto">
      <!-- Titre principal -->
      <h1 class="text-5xl md:text-6xl font-bold text-center mb-16 tracking-wider" style="font-family: 'Courier New', monospace;">
        Contact
      </h1>

      <!-- Messages de feedback -->
      <div id="successMessage" class="max-w-5xl mx-auto mb-8 bg-green-500/20 border-2 border-green-500 text-green-200 px-6 py-4 rounded-3xl hidden">
      </div>
      
      <div id="errorMessage" class="max-w-5xl mx-auto mb-8 bg-red-500/20 border-2 border-red-500 text-red-200 px-6 py-4 rounded-3xl hidden">
      </div>

      <!-- Conteneur principal avec bordure -->
      <div class="max-w-5xl mx-auto border-4 border-white rounded-[2rem] overflow-hidden">
        <div class="grid md:grid-cols-[1fr,2fr]">
          <!-- Colonne gauche -->
          <div class="bg-[#1a1a1a] p-8 md:p-12 flex flex-col justify-center border-r-4 border-white">
            <h2 class="text-3xl md:text-4xl font-bold mb-6 tracking-wider" style="font-family: 'Courier New', monospace;">
              UNE ENVIE ?
            </h2>
            <p class="text-gray-300 leading-relaxed text-sm">
              Si ces projets vous intéressent, je serai ravi d'échanger avec vous sur vos besoins en design et développement.
            </p>
          </div>

          <!-- Colonne droite - Formulaire -->
          <div class="bg-[#0d0d0d] p-8 md:p-12">
            <h3 class="text-2xl md:text-3xl font-bold mb-8 text-center tracking-wider" style="font-family: 'Courier New', monospace;">
              Contact direct
            </h3>

            <form id="contactForm" class="space-y-6">
              <!-- Nom et Email sur la même ligne -->
              <div class="grid md:grid-cols-2 gap-4">
                <div>
                  <label for="nom" class="block text-xs mb-2 text-gray-400">
                    Nom
                  </label>
                  <input
                    type="text"
                    id="nom"
                    name="nom"
                    required
                    class="w-full px-4 py-3 bg-[#3a3a3a] border-none rounded-lg text-white placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-600"
                  />
                </div>

                <div>
                  <label for="email" class="block text-xs mb-2 text-gray-400">
                    Email
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 bg-[#3a3a3a] border-none rounded-lg text-white placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-600"
                  />
                </div>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-xs mb-2 text-gray-400">
                  Votre demande
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="5"
                  class="w-full px-4 py-3 bg-[#3a3a3a] border-none rounded-lg text-white placeholder-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-600 resize-none"
                ></textarea>
              </div>

              <!-- Bouton d'envoi -->
              <div class="flex justify-center pt-2">
                <button
                  type="submit"
                  id="submitBtn"
                  class="px-8 py-2.5 bg-white text-black font-semibold rounded-full hover:bg-gray-200 transition-colors duration-200 flex items-center gap-2 text-sm disabled:opacity-50 disabled:cursor-not-allowed"
                >
                  <span id="btnText">Envoyer</span>
                  <svg id="btnArrow" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                  <svg id="btnSpinner" class="w-4 h-4 animate-spin hidden" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement;
  const btnText = document.getElementById('btnText') as HTMLSpanElement;
  const btnArrow = document.getElementById('btnArrow') as HTMLElement;
  const btnSpinner = document.getElementById('btnSpinner') as HTMLElement;
  const successMessage = document.getElementById('successMessage') as HTMLDivElement;
  const errorMessage = document.getElementById('errorMessage') as HTMLDivElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Récupérer les données du formulaire
    const formData = new FormData(form);
    const data = {
      nom: formData.get('nom') as string,
      email: formData.get('email') as string,
      message: formData.get('message') as string
    };

    // Masquer les messages précédents
    successMessage.classList.add('hidden');
    errorMessage.classList.add('hidden');

    // Désactiver le bouton et afficher le spinner
    submitBtn.disabled = true;
    btnText.textContent = 'Envoi...';
    btnArrow.classList.add('hidden');
    btnSpinner.classList.remove('hidden');

    try {
      const response = await fetch('/apis/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (result.success) {
        successMessage.textContent = result.message;
        successMessage.classList.remove('hidden');
        form.reset();
        
        // Faire défiler vers le message de succès
        successMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      } else {
        errorMessage.textContent = result.error;
        errorMessage.classList.remove('hidden');
        
        // Faire défiler vers le message d'erreur
        errorMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }
    } catch (error) {
      errorMessage.textContent = "Une erreur réseau est survenue. Veuillez réessayer.";
      errorMessage.classList.remove('hidden');
      errorMessage.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
    } finally {
      // Réactiver le bouton
      submitBtn.disabled = false;
      btnText.textContent = 'Envoyer';
      btnArrow.classList.remove('hidden');
      btnSpinner.classList.add('hidden');
    }
  });
</script>