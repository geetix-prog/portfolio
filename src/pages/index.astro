---
import Layout from "../layouts/Layout.astro";
import FirstPage from "../components/FirstPage.astro";
---

<Layout>
  <FirstPage />
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6 text-center">Welcome to my portfolio</h1>
    <p class="text-lg text-gray-700 mb-8 text-center">
      This is a test page with some sample content.
    </p>

    <section class="mb-8">
      <h2 class="text-3xl font-semibold mb-4">About</h2>
      <p class="text-gray-600">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit.
      </p>
    </section>

    <section>
      <h2 class="text-3xl font-semibold mb-4">Projects</h2>
      <ul class="list-disc list-inside space-y-2">
        <li class="text-gray-600">Project 1</li>
        <li class="text-gray-600">Project 2</li>
        <li class="text-gray-600">Project 3</li>
      </ul>
    </section>
  </div>
</Layout>

<script>
  setTimeout(() => {
    console.log("Script exécuté");
    const firstPage = document.getElementById("first-page");
    console.log("FirstPage trouvé:", firstPage);
    if (firstPage) {
    firstPage.style.transition = "transform 1s, opacity 1s";
    firstPage.style.transform = "translateY(-100%)";
      firstPage.style.opacity = "0";
      firstPage.style.pointerEvents = "none";
      setTimeout(() => {
        console.log("Suppression de FirstPage");
        firstPage.remove();
      }, 500);
    }
  }, 3000);
</script>