---
const { ...proj } = Astro.props;
---

<div
  class="bg-primary rounded-xl lg:w-full lg:rounded-2xl overflow-hidden group hover:scale-102 hover:shadow-2xl transition-all duration-300"
>
  <div class="relative overflow-hidden">
    <img
      src={proj.img}
      alt={proj.titre}
      class="w-full h-full object-cover group-hover:scale-103 transition-transform duration-500"
      transition:name={`project-img-${proj.id}`}
    />
    <div
      class="absolute top-2 left-2 lg:top-4 lg:left-4 flex items-center gap-2"
    >
      <span
        class="bg-primary text-secondary px-2 py-0.5 lg:px-3 lg:py-1 rounded-full text-[10px] lg:text-xs font-grotesk uppercase tracking-wider"
      >
        {proj.contexte}
      </span>
    </div>
  </div>

  <div class="p-3 lg:p-6 space-y-2 lg:space-y-4">
    <h3
      class="font-fruktur text-secondary text-xl lg:text-3xl group-hover:text-opacity-80 transition-opacity"
      transition:name={`project-title-${proj.id}`}
    >
      {proj.titre}
    </h3>
    <p
      class="font-grotesk text-secondary text-xs lg:text-sm leading-relaxed opacity-80"
    >
      {proj.soustitre}
    </p>
  </div>
</div>
